{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "**/*.test.tsx", "**/*.test.ts"]
}